
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C/C++ source files
[*.{c,cxx,cpp,cc,h,hxx,hpp,hh,inl,tpp}]
indent_style = space
indent_size = 4

# CMake
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# GitHub Workflows
[*.yml]
indent_style = space
indent_size = 2
